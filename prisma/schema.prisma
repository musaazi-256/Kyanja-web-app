generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Role {
  ADMIN
}

enum MediaSection {
  HERO
  PHILOSOPHY
  TEAM
  SCHOOL_CLUBS
  ADS_BANNER
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  passwordHash  String
  role          Role      @default(ADMIN)
  accounts      Account[]
  sessions      Session[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([sessionToken])
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
}

model AdmissionApplication {
  id                String   @id @default(cuid())
  surname           String
  foreName          String
  dateOfBirth       DateTime
  religiousBelief   String
  passportPhotoUrl  String?

  previousSchools   Json

  vaccinationPolio    Boolean @default(false)
  vaccinationTyphoid  Boolean @default(false)
  vaccinationMeasles  Boolean @default(false)
  healthOthers        String?

  parentName        String
  residence         String
  email             String
  telHome           String
  telOffice         String?
  occupation        String
  nin               String
  nextOfKin         String

  declarationAccepted Boolean
  digitalSignature    String
  signedDate          DateTime

  status            String   @default("pending")
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model GalleryImage {
  id        String   @id @default(cuid())
  imageUrl  String
  altText   String
  createdAt DateTime @default(now())
}

model ManagedImage {
  id          String       @id @default(cuid())
  section     MediaSection
  imageUrl    String?
  mobileImageUrl String?
  title       String
  subtitle    String?
  description String?
  sortOrder   Int          @default(0)
  isActive    Boolean      @default(true)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@index([section, isActive, sortOrder])
}
